.resource{:id=>"resource_#{resource.id}"}
  = semantic_form_for ResourceProducer.new(:resource => resource, :invitation => @invitation), :remote => true, :html => { :class => "new_resource" , :id => "new_resource_#{resource.id}"} do |f|
    .row
      .span3
        = f.inputs do 
          = f.input :quantity, :as => :hidden, :label=>"#{resource.name}"
          = f.input :resource_id, :as => :hidden, :label => false
          = f.input :invitation_id, :as => :hidden, :label => false
      .span4
        = f.inputs do 
          = render :partial => "resources/pledge_button" , :locals => { _resource: resource , _quantity: -5 , _form: f , _invitation: @invitation}
          = render :partial => "resources/pledge_button" , :locals => { _resource: resource , _quantity: -1 , _form: f , _invitation: @invitation}
          = render :partial => "resources/pledge_button" , :locals => { _resource: resource , _quantity: 1  , _form: f , _invitation: @invitation}
          = render :partial => "resources/pledge_button" , :locals => { _resource: resource , _quantity: 5  , _form: f , _invitation: @invitation}
      .span4
        %p="You have pledged #{resource.quantity_produced_by @invitation}"
        %p
          = link_to "Total pledged #{resource.quantity_produced}", resource
        %p="Amount still to be pledged #{resource.quantity_remaining_to_be_allocated}"
