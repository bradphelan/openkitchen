!!!
%html
  %head
    %title Gobbq
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar(data-scrollspy="scrollspy")
      .topbar-inner
        .container
          =link_to "BBQInvite", root_path, :class=>"brand"
          %ul.nav
            %li=link_to "Events", events_path
            %li=link_to current_user.email, edit_user_registration_path

    .container(style="padding-top:40px")
      .content
        = yield
