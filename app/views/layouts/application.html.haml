!!!
%html
  %head
    %title Open Kitchen
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = yield :scripts
    = csrf_meta_tags
    <meta name="viewport" content="width=320"> 

  %body
    .navbar.navbar-fixed-top(data-scrollspy="scrollspy")
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          =link_to "", root_path, :class=>"brand"

          .nav-collapse
            %ul.nav
              -if user_signed_in?
                %li=link_to "Events", events_path
                -if current_user.registration_completed?
                  %li=link_to "Account", edit_user_registration_path
                  %li=link_to "Profile", edit_user_profile_path(current_user)
                -else
                  %li#complete_registration=button_to "Complete Registration", users_register_path, :method => :post
                %li=link_to "Sign out", destroy_user_session_path, :method => :delete

              -else
                %li.sign_in=link_to "Sign in", new_user_session_path
                %li.sign_up=link_to "Sign up", new_user_registration_path

              = yield :navigation
    

    #page
      .content
        .container
          = render :partial=> 'common/flashes'
          - if content_for? :content
            = yield :content
          - else
            = yield
  %footer
    = yield :scripts
