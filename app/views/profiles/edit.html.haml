%h1=Profile.model_name.human

%section.well.profile.password#password_edit{'data-subnav-label' => t(".password")}
  = link_to edit_user_registration_path, :class => "btn btn-danger" do
    %i.icon-lock.icon-white
    = t ".change_password"

%section.well.profile.edit#profile_edit{'data-subnav-label' => t(".edit")}

  = semantic_form_for @profile, :url => user_profile_path(@user), :html => { :multipart => true } do |f|
    .row
      = f.inputs do 
        .span5
          - autofill = @profile.timezone ? nil : 'autofill'
          = f.input :timezone, :as => :time_zone, :input_html => { :class => "timezone #{autofill}" }
          = f.input :cookstars, :as => :select, :collection => 1..5
        .span5
          %span.avatar
            - if @profile.avatar.file?
              = image_tag @profile.avatar.expiring_url(120, :medium)
            - else
              = image_tag "chef.jpg"
            = f.input :avatar
    .row
      .span11
        = f.buttons

%section.venues.edit#venues_edit{'data-subnav-label' => (Venue.model_name.human :count => 2)}
  %h1=Venue.model_name.human :count => 2
  .well
    %ul
    - current_user.user_venue_managements.each do |uvm|
      %li
        %a=link_to (uvm.venue.name.nil? ? "????????": uvm.venue.name ), edit_venue_path(uvm.venue)
