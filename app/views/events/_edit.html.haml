- @event = _event

.edit_event
  - if  @event.owner == current_user
    %h2 You are hosting
  - else
    %h2 You are invited to
  = semantic_form_for @event do |f|
    .row
      .span4
        - disabled = cannot? :edit, @event
        = render :partial => "form", :locals => { :f => f, :event => @event, :disabled => disabled }
      .span3
        - if can? :edit, @event
          %ul.tabs.nav.nav-tabs#event_description_editor
            %li.active
              %a(href="#description_edit" data-toggle="pill") edit
            %li
              %a.show(href="#description_show" data-toggle="pill") show
          .tab-content
            #description_edit.tab-pane.active
              = f.input :description, :as => :text, :hint => link_to("Edit with markdown", "http://support.mashery.com/docs/customizing_your_portal/Markdown_Cheat_Sheet", :class => "markdown_popover")
            #description_show.tab-pane
              = sanitize @event.description_unsanitzed_html
        - else
          = sanitize @event.description_unsanitzed_html
    .row
      .span7
        -if @event.latitude and @event.longitude
          = render :partial => "map", :locals => { :mapping_data => @mapping_data }




          

