- @event = _event
- @comments = @event.root_comments

.comments
  %h2 Discussion
  - @comments.each do |comment|
    .comment
      %p.body=simple_format h(comment.body)
      %p.attribution
        %span.author=comment.user.name
        %span.date=comment.updated_at.in_time_zone Time.zone
  .new
    = semantic_form_for [@event, Comment.build_from(@event, current_user, "")] do |f|
      .form
        = f.inputs do
          = f.input :body, :label => false
        = f.actions do
          = f.action :submit, :as => :button, :label => "comment"
