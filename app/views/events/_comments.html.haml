- @event = _event
- @comments = @event.root_comments

.comments
  %h2 Discussion
  %ul.unstyled
    - @comments.each do |comment|
      = render :partial => "comment", :locals => {:event => @event, :comment => comment }

  .new
    = semantic_form_for [@event, Comment.build_from(@event, current_user, "")], :remote => true do |f|
      .form
        = f.inputs do
          = f.input :body, :label => false
        = f.actions do
          = f.action :submit, :as => :button, :label => "comment"
