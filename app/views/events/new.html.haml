%h1 Create a BBQ

= semantic_form_for @event do |f|
  = f.inputs do
    = f.input :name
    = f.input :datetime, :label => "Date", :as => :string, :input_html => { :class => :datepicker, :value => @event.datetime.strftime(Date::DATE_FORMATS[:default])}
    = f.input :timezone, :as => :time_zone
  = f.buttons
    
